{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Beyond Better",
  "version": "0.6.1",
  "identifier": "dev.beyondbetter.app",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "BB Server",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "capabilities": [
        "main-capability",
        "chat-capability"
      ],
      "csp": {
        "default-src": "'self' * 'unsafe-inline' 'unsafe-eval",
        "connect-src": "'self' * ws: wss: http: https:",
        "font-src": [
          "https://fonts.gstatic.com"
        ],
        "img-src": "'self' asset: blob: data:",
        "style-src": "'unsafe-inline' 'self' https://fonts.googleapis.com"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "app",
      "dmg",
      "msi",
      "nsis",
      "appimage"
    ],
    "category": "Utility",
    "shortDescription": "Beyond Better Desktop App",
    "longDescription": "Desktop app for Beyond Better, providing a modern interface for managing BB tools and configurations.",
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "wix": {
        "language": "en-US",
        "enableElevatedUpdateTask": true
      },
      "nsis": {
        "installMode": "both",
        "displayLanguageSelector": false,
        "startMenuFolder": "Beyond Better"
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "entitlements": "macos/entitlements.plist",
      "dmg": {
        "windowSize": {
          "width": 660,
          "height": 400
        },
        "appPosition": {
          "x": 90,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 180,
          "y": 170
        }
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
